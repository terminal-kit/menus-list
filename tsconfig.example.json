{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "examples/types/*"
      ]
    }
  },
  "include": [
    "example/**/*"
  ]
}